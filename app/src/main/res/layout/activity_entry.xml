<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/entry_btn_draw1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="draw1"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/entry_btn_draw2" />

    <Button
        android:id="@+id/entry_btn_draw2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="draw2"
        app:layout_constraintLeft_toRightOf="@+id/entry_btn_draw1"
        app:layout_constraintRight_toLeftOf="@+id/entry_btn_draw3" />

    <Button
        android:id="@+id/entry_btn_draw3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="draw3"
        app:layout_constraintLeft_toRightOf="@+id/entry_btn_draw2"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/entry_btn_draw4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="draw4"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/entry_btn_draw5"
        app:layout_constraintTop_toBottomOf="@id/entry_btn_draw1" />

    <Button
        android:id="@+id/entry_btn_draw5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin"
        android:layout_marginRight="@dimen/margin"
        android:layout_marginTop="10dp"
        android:text="draw5"
        app:layout_constraintLeft_toRightOf="@+id/entry_btn_draw4"
        app:layout_constraintRight_toLeftOf="@+id/entry_btn_draw6"
        app:layout_constraintTop_toBottomOf="@id/entry_btn_draw1" />

    <Button
        android:id="@+id/entry_btn_draw6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/margin"
        android:layout_marginTop="10dp"
        android:text="draw6"
        app:layout_constraintLeft_toRightOf="@+id/entry_btn_draw5"
        app:layout_constraintRight_toLeftOf="@+id/entry_btn_draw7"
        app:layout_constraintTop_toBottomOf="@id/entry_btn_draw1" />

    <Button
        android:id="@+id/entry_btn_draw7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="draw7"
        app:layout_constraintLeft_toRightOf="@+id/entry_btn_draw6"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/entry_btn_draw1" />

    <Button
        android:id="@+id/entry_btn_imitate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="imitate"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/entry_btn_draw4" />

    <Button
        android:id="@+id/entry_btn_measure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="measure"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/entry_btn_imitate" />

</android.support.constraint.ConstraintLayout>